<html>
    <head>
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    </head>
    <body>
        <h1 id="main-header"><i class="fas fa-address-book"></i> My Contacts List</h1>
        <div id="outer">
        <div id="outer-div">
        <ul type="none">
            <% for (let i of contact_list) {%>
            <li>
               <div class="inner-div"> <span><%= i.name%></span>
                <span><%= i.phone%></span>
               
            </div>
            <div id="delete">
                <a href="/delete-contact?id=<%= i._id%>">
                    <i class="fas fa-trash-alt"></i>
            </a></div>
            </li>
            <%}%>
        </ul>
        </div>
        <form action="/create-contact" method="post">
            <input type="text" name="name" placeholder="Enter name" required>
          
            <input type="number" name="phone" placeholder="Enter phone" required>
           
            <button type="submit">Add Contact</button>
        </form>
    </div>
    </body>
    <script type="text/javascript" src="/js/home.js"></script>
</html>